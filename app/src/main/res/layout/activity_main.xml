<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/center_funlist_layout"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/invitaionTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="text_refer_earn"
                            android:textColor="#424242"
                            android:textSize="12sp" />

                    </LinearLayout>

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/KachingTask"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="Missions"
                            android:textColor="#424242"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/myWallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="My Wallet"
                    android:textColor="#424242"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/snippetMall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="SnippetMall"
                    android:textColor="#424242"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/redliner"
                    android:background="@drawable/dianread"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/dp_5"
                    android:layout_height="@dimen/dp_24">
                    <ImageView
                        android:id="@+id/imageK"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:src="@mipmap/icon_small_k"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/textInvation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginRight="8dp"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_10"
                        android:text="6000 kachings" />

                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/blueliner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_24"
                android:background="@drawable/dianblue"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="@dimen/dp_1"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="@dimen/dp_1"
                    android:src="@mipmap/icon_small_k"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/textKaching"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="text_check_in"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>